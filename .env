# ===== Обязательные настройки =====
# Настройки PostgreSQL
DB_HOST=db
DB_PORT=5432
DB_NAME=hotel_db
DB_USER=hotel_user
DB_PASSWORD=hotel_password

# ===== Настройки Flask =====
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# ===== Дополнительные настройки =====
# Логирование
LOG_LEVEL=DEBUG
LOG_FILE=/var/log/hotel_app.log

# Безопасность
SECURITY_PASSWORD_SALT=your-security-salt
SESSION_COOKIE_SECURE=False  # True для production с HTTPS

# Пути
PYTHONPATH=/app
UPLOAD_FOLDER=/app/uploads